indent_size=4

[Makefile]
indent_style=tab
indent_size=8

[CMakeLists.txt]
indent_style=space
indent_size=4

[*.cmake]
indent_style=space
indent_size=4

[*.conf]
indent_style=tab
indent_size=8

[*.yml]
indent_style=space
indent_size=2
